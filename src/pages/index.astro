---
import EmptyLayout from "../layouts/EmptyLayout.astro";
---

<script>
    import { defaultLang } from "../i18n/utils";
    import { langStore } from "../state";

    const slang = localStorage.getItem("lang") || "";
    if (slang != langStore.get()) {
        langStore.set(slang);
    }
    const lang = langStore.get() || defaultLang;
    window.location.href = "/" + lang;
</script>

<EmptyLayout />
