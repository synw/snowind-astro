---
import "../scss/main.scss";
import { themeStore } from "../state";

const { title } = Astro.props;
const pageRootCss = "h-svh w-full";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div id="pageroot" class={pageRootCss}>
			<slot />
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
	html {
		@apply background;
	}
	html.dark {
		@apply dark-background;
	}
</style>

<script>
	const t = document.getElementsByTagName("html")[0];
	//const pr = document.getElementById("pageroot")!;
	const theme = localStorage.getItem("theme");
	const dm = localStorage.getItem("darkmode");
	t.classList.add("theme-" + theme);
	if (dm == "true") {
		t.classList.add("dark");
	}
</script>
