        <div class="txt-semilight text-lg mb-4">{t("hero.snowind")}</div>
        <h1 class="text-4xl md:text-6xl font-bold mb-6 txt-primary">
            {t("hero.title")}
        </h1>
        <p class="txt-primary text-xl mb-8">
            {t("hero.subtitle")}
        </p>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
            <div
                class="bg-light rounded-lg p-6 shadow-lg lighter border bord-light"
            >
                <div class="txt-primary text-2xl mb-2">ğŸŒ</div>
                <h3 class="text-xl font-semibold mb-2">
                    {t("hero.multilingual")}
                </h3>
                <p class="txt-primary">
                    {t("hero.multilingual_desc")}
                </p>
            </div>

            <div
                class="bg-light rounded-lg p-6 shadow-lg lighter border bord-light"
            >
                <div class="txt-primary text-2xl mb-2">ğŸ¨</div>
                <h3 class="text-xl font-semibold mb-2">{t("hero.themes")}</h3>
                <p class="txt-primary">
                    {t("hero.themes_desc")}
                </p>
            </div>

            <div
                class="bg-light rounded-lg p-6 shadow-lg lighter border bord-light"
            >
